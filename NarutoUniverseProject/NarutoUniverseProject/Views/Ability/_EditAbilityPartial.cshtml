@model NarutoUniverseProject.Models.AbilityModels.EditAbilityBase

<div class="form-group">
    <label asp-for="Name" class="col-md-2 control-label"></label>
    <div>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="TimeToCast" class="col-md-2 control-label"></label>
    <div>
        <input asp-for="TimeToCast" class="form-control" />
        <span asp-validation-for="TimeToCast" class="text-danger"></span>
    </div>
</div>

<!--hier will be two downlists-->
<div class="form-group">
    <label asp-for="StyleId" class="col-md-2 control-label"></label>
    <div>
        <select class="form-control" asp-for="StyleId" asp-items='@ViewBag.Styles'></select>
        <span asp-validation-for="StyleId" class="text-danger"></span>
    </div>
</div>
