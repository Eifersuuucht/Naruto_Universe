@model NarutoUniverseProject.Models.AbilityModels.AbilityCreateBindModel
@{
    ViewData["Title"] = "Creating a new person";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<form asp-controller="Ability" asp-action="Create" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="_EditAbilityPartial.cshtml" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>

</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}